{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": ".",
    "module": "ES6",
    "plugins": [
      {
        "name": "ts-lit-plugin",
      }
    ],
    "paths": {
      "@public/*": ["../public/*"],
      "@utils/*": ["utils/*"],
      "@state/*": ["state/*"],
      "@views/*": ["views/*"],
      "@components/*": ["views/components/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "../@types"
    ]
  },
  "include": [
    "**/*.ts",
    "../@types/*.d.ts"
  ]
}